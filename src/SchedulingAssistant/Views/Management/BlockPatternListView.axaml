<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:SchedulingAssistant.ViewModels.Management"
             x:Class="SchedulingAssistant.Views.Management.BlockPatternListView"
             x:DataType="vm:BlockPatternListViewModel"
             x:CompileBindings="False">

    <StackPanel Spacing="16" MaxWidth="500">

        <TextBlock Text="Block Patterns" FontSize="20" FontWeight="SemiBold" />

        <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextLabel}" FontSize="12">
            Save up to five favourite day patterns (e.g. "Mon/Wed") and apply them with one click when building a section schedule.
        </TextBlock>

        <!-- Slot 1 -->
        <Border BorderBrush="{StaticResource SubduedBorder}" BorderThickness="1" CornerRadius="4" Padding="12">
            <StackPanel Spacing="8" DataContext="{Binding Slot1}">

                <DockPanel>
                    <TextBlock DockPanel.Dock="Left" Text="Pattern 1"
                               FontWeight="SemiBold" VerticalAlignment="Center" />
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Spacing="6">
                        <Button Content="Edit"
                                Command="{Binding EditCommand}"
                                IsEnabled="{Binding $parent[UserControl].DataContext.IsEditingAny, Converter={x:Static BoolConverters.Not}}"
                                Padding="8,3" FontSize="12" />
                        <Button Content="Clear"
                                Command="{Binding ClearCommand}"
                                IsEnabled="{Binding Pattern, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Padding="8,3" FontSize="12" />
                    </StackPanel>
                    <TextBlock Text="{Binding DisplayName}"
                               Foreground="{StaticResource TextSubtle}" VerticalAlignment="Center" Margin="8,0" />
                </DockPanel>

                <!-- Inline edit form for Slot 1 -->
                <ContentControl Content="{Binding EditVm}">
                    <ContentControl.ContentTemplate>
                        <DataTemplate DataType="{x:Type vm:BlockPatternEditViewModel}">
                            <StackPanel Spacing="8">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="Name" FontSize="11" Foreground="{StaticResource TextLabel}" />
                                    <TextBox Text="{Binding Name}" FontSize="12" Width="200" HorizontalAlignment="Left" />
                                </StackPanel>
                                <StackPanel Spacing="4">
                                    <TextBlock Text="Days" FontSize="11" Foreground="{StaticResource TextLabel}" />
                                    <ItemsControl ItemsSource="{Binding Days}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" Spacing="10" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type vm:DayCheckViewModel}">
                                                <CheckBox IsChecked="{Binding IsChecked}"
                                                          Content="{Binding DayName}"
                                                          FontSize="12" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <TextBlock Text="{Binding ValidationError}"
                                           Foreground="{StaticResource TextValidationError}" FontSize="11"
                                           IsVisible="{Binding ValidationError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Button Content="Save"   Command="{Binding SaveCommand}"   Padding="10,4" />
                                    <Button Content="Cancel" Command="{Binding CancelCommand}" Padding="10,4" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>

            </StackPanel>
        </Border>


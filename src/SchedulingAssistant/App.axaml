<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:SchedulingAssistant"
             xmlns:conv="using:SchedulingAssistant.Converters"
             x:Class="SchedulingAssistant.App"
             RequestedThemeVariant="Light">

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml" />
        <Style Selector="Button">
            <Setter Property="Background" Value="#AECBF0" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#7AAAD4" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>
        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#C5DAEF" />
        </Style>
        <Style Selector="Button:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#90B8E8" />
        </Style>
        <Style Selector="Button.nav">
            <Setter Property="Padding" Value="14,8" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="FontSize" Value="13" />
        </Style>
        <Style Selector="Button.nav:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#C5DAEF" />
        </Style>

        <!-- Settings menu: strip chrome from the Menu container itself -->
        <Style Selector="Menu">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <!-- Top-level MenuItem styled like a nav button -->
        <Style Selector="MenuItem.nav">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>
        <Style Selector="MenuItem.nav:pointerover /template/ Border#PART_LayoutRoot">
            <Setter Property="Background" Value="#C5DAEF" />
        </Style>
        <Style Selector="MenuItem.nav:selected /template/ Border#PART_LayoutRoot">
            <Setter Property="Background" Value="#C5DAEF" />
        </Style>
    </Application.Styles>

    <Application.Resources>
        <conv:MinutesToTimeConverter x:Key="MinutesToTimeConverter" />
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

</Application>

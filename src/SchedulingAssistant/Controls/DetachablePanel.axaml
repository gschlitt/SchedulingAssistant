<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SchedulingAssistant.Controls.DetachablePanel"
             x:Name="Root">

    <Border BorderBrush="#7AAAD4" BorderThickness="1">
        <Grid RowDefinitions="Auto,*">

            <!-- Panel header bar -->
            <Border Grid.Row="0" Background="#AECBF0"
                    BorderBrush="#7AAAD4" BorderThickness="0,0,0,1"
                    Padding="8,4">
                <DockPanel>
                    <Button DockPanel.Dock="Right"
                            Content="â§‰"
                            ToolTip.Tip="Pop out into window"
                            Click="OnDetachClicked"
                            Padding="4,2"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="13"
                            Cursor="Hand" />
                    <TextBlock Text="{Binding #Root.Header}"
                               FontWeight="SemiBold"
                               FontSize="13"
                               VerticalAlignment="Center" />
                </DockPanel>
            </Border>

            <!-- Panel content -->
            <ContentPresenter Grid.Row="1"
                              Content="{Binding #Root.PanelContent}" />

        </Grid>
    </Border>

</UserControl>
